{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-eslint-rules"
  ],
  "rules": {
    "array-bracket-spacing": [true, "never"],
    "arrow-parens": false,
    "block-spacing" : [true, "always"],
    "brace-style": [true, "1tbs", { "allowSingleLine": false }],
    "indent": [true, "spaces", 4],
    "interface-name": false,
    "jsx-curly-spacing": false,
    "jsx-no-multiline-js": false,
    "jsx-space-before-trailing-slash": true,
    "jsx-boolean-value": ["never"],
    "max-line-length": false,
    "member-access": false,
    "no-default-export": true,
    "no-duplicate-imports": true,
    "no-invalid-this": true,
    "no-irregular-whitespace": true,
    "no-multi-spaces": [true, {"exceptions": { "VariableDeclaration": false, "PropertyAssignment": false, "BinaryExpression": false } }],
    "no-string-literal": false,
    "no-trailing-whitespace": [true, "ignore-blank-lines"],
    "object-curly-spacing": [true, "always"],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "prefer-conditional-expression": true,
    "prefer-object-spread": true,
    "quotemark": [true, "single", "avoid-escape", "avoid-template", "jsx-double"],
    "switch-default": true,
    "ter-arrow-spacing": [true],
    "ter-computed-property-spacing": [true, "never"],
    "ter-no-mixed-spaces-and-tabs": { "type": "spaces" },
    "trailing-comma": false
  },
  "jsRules": {
    "array-bracket-spacing": [true, "never"],
    "arrow-parens": false,
    "arrow-return-shorthand": true,
    "block-spacing" : [true, "always"],
    "brace-style": [true, "1tbs", { "allowSingleLine": false }],
    "indent": [true, "spaces", 4],
    "interface-name": false,
    "jsx-curly-spacing": false,
    "jsx-no-multiline-js": false,
    "jsx-space-before-trailing-slash": true,
    "max-line-length": false,
    "member-access": false,
    "no-duplicate-imports": true,
    "no-invalid-this": true,
    "no-irregular-whitespace": true,
    "no-multi-spaces": [true, {"exceptions": { "VariableDeclaration": false, "PropertyAssignment": false, "BinaryExpression": false } }],
    "no-string-literal": false,
    "no-trailing-whitespace": [true, "ignore-blank-lines"],
    "object-curly-spacing": [true, "always"],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "prefer-conditional-expression": true,
    "prefer-object-spread": true,
    "quotemark": [true, "single", "avoid-escape", "avoid-template", "jsx-double"],
    "switch-default": true,
    "switch-final-break": [true, "always"],
    "ter-arrow-spacing": [true],
    "ter-computed-property-spacing": [true, "never"],
    "ter-no-mixed-spaces-and-tabs": { "type": "spaces" },
    "trailing-comma": false
  }
}
